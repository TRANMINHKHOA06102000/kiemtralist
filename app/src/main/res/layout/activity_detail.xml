<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">
    <LinearLayout
        android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#20AAE8"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/menu"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:layout_toRightOf="@+id/popular"/>
            <ImageView
               android:layout_marginLeft="280dp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search"
                android:layout_toRightOf="@+id/menu"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="#22DD15"
        android:id="@+id/h2"
        android:gravity="center"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/hinh"
            android:layout_width="211dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@drawable/dcm" />

        <TextView
            android:layout_below="@+id/hinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="TRANMINHKHOA"
            android:textColor="#FF5722"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/phone"
        android:layout_below="@id/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp"
            android:text="Phone"
            android:textColor="#191817"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sdt"
            android:layout_below="@+id/p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="0357740062"
            android:textColor="#1E1D1D"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/a"
            android:layout_below="@+id/sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="quangngai"
            android:textColor="#7E7C7B"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/a1"
            android:layout_below="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="0357740062"
            android:textColor="#1E1D1D"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_below="@+id/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="quangngai"
            android:textColor="#7E7C7B"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/p2"
        android:layout_below="@id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp"
            android:text="Record"
            android:textColor="#101010"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/r1"
            android:layout_below="@+id/r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="InComing"
            android:textColor="#100F0F"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/r"
            android:layout_toRightOf="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="17:52"
            android:textColor="#7E7C7B"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/r2"
            android:layout_below="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="0357740062"
            android:textColor="#7E7C7B"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/r3"
            android:layout_below="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="InComing"
            android:textColor="#100F0F"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/r2"
            android:layout_toRightOf="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="17:52"
            android:textColor="#7E7C7B"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_below="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="0357740062"
            android:textColor="#7E7C7B"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>